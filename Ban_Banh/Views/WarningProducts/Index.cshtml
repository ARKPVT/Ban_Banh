@model IEnumerable<DemoApp.Models.WarningProductViewModel>
@{
    ViewData["Title"] = "Cảnh báo hàng hóa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var selected = ViewBag.SelectedFilter as string ?? "all";

    var filters = new Dictionary<string, string>
    {
        { "all", "Tất cả" },
        { "LowStock", "Sắp hết hàng" },
        { "OutOfStock", "Hết hàng" },
        { "NearExpiry", "Sắp hết hạn" },
        { "Damaged", "Hàng lỗi" }
    };
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">@ViewData["Title"]</h2>

    <!-- Bộ lọc -->
    <form method="get" class="mb-3">
        <label for="filter" class="fw-semibold">Lọc theo loại cảnh báo:</label>
        <select name="filter" id="filter" class="form-select w-auto d-inline-block ms-2" onchange="this.form.submit()">
            @{
                foreach (var f in filters)
                {
                    if (f.Key == selected)
                    {
                        <option value="@f.Key" selected>@f.Value</option>
                    }
                    else
                    {
                        <option value="@f.Key">@f.Value</option>
                    }
                }
            }
        </select>
    </form>

    <!-- Bảng -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold bg-light">Danh sách cảnh báo</div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle text-center mb-0">
                <thead class="table-secondary">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Tồn kho</th>
                        <th>Hạn sử dụng</th>
                        <th>Loại cảnh báo</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var bg = item.WarningType switch
                        {
                            "OutOfStock" => "table-danger",
                            "LowStock" => "table-warning",
                            "NearExpiry" => "table-info",
                            "Damaged" => "table-secondary",
                            _ => ""
                        };
                        <tr class="@bg">
                            <td class="fw-semibold">@item.ProductName</td>
                            <td>@item.Category</td>
                            <td>@item.Stock</td>
                            <td>@item.ExpiryDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @switch (item.WarningType)
                                {
                                    case "LowStock":
                                        <span class="badge bg-warning text-dark">Sắp hết hàng</span>
                                        ; break;
                                    case "OutOfStock":

                                        <span class="badge bg-danger">Hết hàng</span>
                                        ; break;
                                    case "NearExpiry":

                                        <span class="badge bg-info text-dark">Sắp hết hạn</span>
                                        ; break;
                                    case "Damaged":

                                        <span class="badge bg-secondary">Hàng lỗi</span>
                                        ; break;
                                }
                            </td>
                            <td>
                                @if (item.IsHandled)
                                {
                                    <span class="badge bg-success">Đã xử lý</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Chưa xử lý</span>
                                }
                            </td>
                            <td>
                                @if (!item.IsHandled)
                                {
                                    <form asp-action="MarkHandled" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Đánh dấu xử lý</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

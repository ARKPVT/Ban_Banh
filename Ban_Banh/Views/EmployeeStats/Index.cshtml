@model IEnumerable<DemoApp.Models.EmployeeStatisticViewModel>
@{
    ViewData["Title"] = "Thống kê theo nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var selected = ViewBag.SelectedPeriod as string ?? "month";

    var periods = new Dictionary<string, string>
    {
        { "day", "Ngày" },
        { "week", "Tuần" },
        { "month", "Tháng" },
        { "quarter", "Quý" },
        { "year", "Năm" },
        { "all", "Tất cả" }
    };
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewBag.Title</h2>

    <!-- Bộ lọc thời gian -->
    <form method="get" class="mb-4">
        <label for="period" class="form-label fw-semibold">Chọn mốc thời gian:</label>
        <select name="period" id="period" class="form-select w-auto d-inline-block ms-2" onchange="this.form.submit()">
            @{
                foreach (var p in periods)
                {
                    if (p.Key == selected)
                    {
                        <option value="@p.Key" selected>@p.Value</option>
                    }
                    else
                    {
                        <option value="@p.Key">@p.Value</option>
                    }
                }
            }
        </select>
    </form>

    <!-- Biểu đồ doanh thu -->
    <div class="card shadow-sm p-3 mb-4">
        <h5 class="mb-3">Biểu đồ doanh thu theo nhân viên</h5>
        <canvas id="revenueChart" height="120"></canvas>
    </div>

    <!-- Bảng thống kê -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold bg-light">Chi tiết hiệu suất nhân viên</div>
        <div class="card-body p-0">
            <table class="table table-striped table-bordered text-center align-middle m-0">
                <thead class="table-light">
                    <tr>
                        <th>Nhân viên</th>
                        <th>Số đơn xử lý</th>
                        <th>Sản phẩm bán</th>
                        <th>Doanh thu (VNĐ)</th>
                        <th>Lợi nhuận (VNĐ)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@e.EmployeeName</td>
                            <td>@e.OrdersHandled</td>
                            <td>@e.ProductsSold</td>
                            <td>@string.Format("{0:N0}", e.Revenue)</td>
                            <td class="fw-bold text-success">@string.Format("{0:N0}", e.Profit)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const names = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(e => e.EmployeeName)));
        const revenues = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(e => e.Revenue)));
        const profits = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(e => e.Profit)));

        const ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: names,
                datasets: [
                    { label: 'Doanh thu', data: revenues, backgroundColor: '#007bff' },
                    { label: 'Lợi nhuận', data: profits, backgroundColor: '#28a745' }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    title: { display: true, text: 'Hiệu suất làm việc - Doanh thu & Lợi nhuận' }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}

@{
    ViewBag.Title = "Liên hệ";
}

<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" />

<div class="contact-header text-center text-white d-flex align-items-center justify-content-center">
    <div class="overlay"></div>
    <div class="animate__animated animate__fadeInDown">
        <h1 class="font-script mb-3">Kết nối cùng SweetCake</h1>
        <p class="lead">Chúng tôi rất vui được lắng nghe bạn.</p>
    </div>
</div>

<div class="container py-5">
    <div class="row g-5">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
            <h3 class="fw-bold mb-4 text-gradient">Gửi lời nhắn đến chúng tôi</h3>
            <form>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Họ và tên</label>
                    <input type="text" class="form-control form-control-lg" placeholder="Nguyễn Văn A" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control form-control-lg" placeholder="you@example.com" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Nội dung</label>
                    <textarea rows="5" class="form-control form-control-lg" placeholder="Viết lời nhắn của bạn..."></textarea>
                </div>
                <button type="button" class="btn btn-gradient btn-lg px-5">Gửi ngay</button>
            </form>
        </div>

        <div class="col-md-6 animate__animated animate__fadeInRight">
            <div class="rounded-4 overflow-hidden shadow-lg mb-4">
                <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3500.023264997709!2d-40.19189392482538!3d24.090920978439563!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjTCsDA1JzI3LjMiTiA0MMKwMTEnMjEuNiJX!5e1!3m2!1svi!2s!4v1760271207039!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="bg-white p-4 rounded-4 shadow-sm">
                <h5 class="fw-bold mb-3 text-gradient">Thông tin liên hệ</h5>
                <p><i class="bi bi-geo-alt-fill text-danger"></i> 123 Đường Bánh Ngọt, Quận 1, TP.HCM</p>
                <p><i class="bi bi-telephone-fill text-primary"></i> 0909 123 456</p>
                <p><i class="bi bi-envelope-fill text-warning"></i> sweetcake@gmail.com</p>
                <p><i class="bi bi-clock text-success"></i> 8:00 - 21:00 (Thứ 2 - CN)</p>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-header {
        height: 60vh;
        background: url('https://th.bing.com/th/id/OIG4.1m2lOXgD93.NfxXPcayK?cb=12&w=1536&h=1024&rs=1&pid=ImgDetMain&o=7&rm=3') center/cover fixed no-repeat;
        position: relative;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.45);
    }

    .font-script {
        font-family: 'Great Vibes', cursive;
        font-size: 3rem;
    }

    .text-gradient {
        background: linear-gradient(45deg, #ff8fa3, #ff5f6d);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #ff8fa3, #ff5f6d);
        color: #fff;
        border: none;
        border-radius: 30px;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }
</style>

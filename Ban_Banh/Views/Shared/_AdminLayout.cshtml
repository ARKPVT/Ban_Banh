<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ban_Banh Admin</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ban_Banh.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
            padding: 20px;
        }

        footer {
            background: #f8f9fa;
            padding: 15px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    ARKDS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav ms-auto">

                        <!-- Trang chính -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i>Dashboard
                            </a>
                        </li>

                        <!-- Quản lý -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="manageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Quản lý
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="manageDropdown">
                                <li><a class="dropdown-item" asp-controller="Supplier" asp-action="Index">Nhà cung cấp</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Đơn hàng</a></li>
                                <li><a class="dropdown-item" asp-controller="Employee" asp-action="Index">Nhân viên</a></li>
                                <li><a class="dropdown-item" asp-controller="Schedule" asp-action="Index">Lịch làm việc</a></li>
                                <li><a class="dropdown-item" asp-controller="Salary" asp-action="Index">Bảng lương</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Index">Nhập hàng</a></li>
                            </ul>
                        </li>

                        <!-- Thống kê -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="statsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bar-chart-line me-1"></i>Thống kê
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="statsDropdown">
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">Tổng quan</a></li>
                                <li><a class="dropdown-item" asp-controller="ProductStats" asp-action="Index">Thống kê bánh</a></li>
                                <li><a class="dropdown-item" asp-controller="EmployeeStats" asp-action="Index">Thống kê nhân viên</a></li>
                            </ul>
                        </li>

                        <!-- Kiểm soát chất lượng -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="qualityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-exclamation-triangle me-1"></i>Chất lượng
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="qualityDropdown">
                                <li><a class="dropdown-item" asp-controller="WarningProducts" asp-action="Index">Cảnh báo</a></li>
                                <li><a class="dropdown-item" asp-controller="ProblemProducts" asp-action="Index">Hàng lỗi</a></li>
                            </ul>
                        </li>

                        <!-- Người dùng -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Người dùng
                            </a>
                        </li>

                        <!-- Tài khoản -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("FullName") ?? "Admin"
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile_ad">Hồ sơ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Ban_Banh. All rights reserved.</p>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@* _Layout.cshtml (sạch, dùng partial cho Feedback) *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ban_Banh</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ban_Banh.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/feedback.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            overflow-x: hidden;
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        main {
            flex: 1;
        }

        footer {
            margin-top: auto;
            background: #f8f9fa;
            padding: 20px 0;
        }

        .hero {
            background: url('/images/hero-banh.jpg') center center no-repeat;
            background-size: cover;
            min-height: 350px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            text-shadow: 2px 2px 5px rgba(0,0,0,.5);
            position: relative;
            z-index: 0;
        }

            .hero::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,.4);
                z-index: -1;
            }

        header, .navbar {
            position: relative;
            z-index: 9999;
        }

        .btn-order {
            background: #f8b400;
            border: none;
            padding: 12px 25px;
            font-weight: bold;
            border-radius: 30px;
            transition: .3s;
        }

            .btn-order:hover {
                background: #d99a00;
                color: #fff;
            }

        @@media (max-width: 575.98px) {
            .hero {
                min-height: 260px;
                padding: 30px 10px;
                text-align: center;
            }

                .hero h1 {
                    font-size: 1.8rem;
                }

                .hero p {
                    font-size: 1rem;
                }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Banh" asp-action="Index">ARKDS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        @* Chỉ GIỮ 1 item góp ý bằng partial *@
                        @await Html.PartialAsync("_FeedbackNavItem")

                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Banh" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#feedbackModal">Góp ý</a>
                        </li>

                        <li class="nav-item position-relative">
                            <a class="nav-link" asp-area="" asp-controller="Banh" asp-action="Cart">
                                <i class="bi bi-cart-fill"></i> Giỏ hàng
                                @if (ViewData["CartQuantity"] is int cartQuantity && cartQuantity > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @cartQuantity
                                        <span class="visually-hidden">sản phẩm trong giỏ</span>
                                    </span>
                                }
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item" asp-controller="CustomerOrders" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-2"></i> Đơn hàng của tôi
                            </a>
                        </li>

                        @if (Context.Session.GetString("UserEmail") == null)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@(Context.Session.GetString("AvatarUrl") ?? "/images/default-avatar.png")"
                                         alt="avatar" class="rounded-circle"
                                         style="width:35px;height:35px;object-fit:cover;margin-right:8px;">
                                    <span class="text-truncate" style="max-width:120px;">@Context.Session.GetString("FullName")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-circle me-2"></i> Hồ sơ</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Toast -->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        @if (TempData["Message"] != null)
        {
            <div id="cartToast" class="toast align-items-center text-white bg-primary border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">@TempData["Message"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center text-md-start mb-3">
                    <h5>Ban_Banh</h5>
                    <p>Địa chỉ: 123 Đường Bánh, TP. HCM</p>
                    <p>Email: info@banbanh.com</p>
                    <p>Hotline: 0123 456 789</p>
                </div>
                <div class="col-md-4 text-center mb-3">
                    <h5>Thông tin</h5>
                    <p><a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></p>
                    <p><a asp-area="" asp-controller="Home" asp-action="Terms">Điều khoản sử dụng</a></p>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <h5>Theo dõi chúng tôi</h5>
                    <p>
                        <a href="#">Facebook</a> |
                        <a href="#">Instagram</a> |
                        <a href="#">TikTok</a>
                    </p>
                </div>
            </div>
            <div class="text-center mt-3">
                <p>&copy; 2025 Ban_Banh. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('cartToast');
            if (toastEl) new bootstrap.Toast(toastEl, { delay: 3000 }).show();
            document.querySelectorAll('.dropdown-toggle').forEach(btn =>
                btn.addEventListener('click', e => e.stopPropagation())
            );
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- AI Chat Widget -->
    <style>
        .ai-toggle {
            position: fixed;
            right: 24px;
            bottom: 24px;
            border: 0;
            background: #5b9cff;
            color: #fff;
            border-radius: 999px;
            padding: 10px 14px;
            font-weight: 700;
            box-shadow: 0 8px 24px rgba(0,0,0,.2);
            z-index: 100000;
            cursor: pointer;
            display: block !important;
        }

        .ai-panel {
            position: fixed;
            right: 24px;
            bottom: 80px;
            width: 380px;
            height: 520px;
            border: 0;
            border-radius: 16px;
            box-shadow: 0 16px 40px rgba(0,0,0,.35);
            overflow: hidden;
            z-index: 100001;
            display: none;
            background: #111218;
        }

        @@media (max-width:640px) {
            .ai-panel {
                width: min(100vw - 16px,380px);
                height: 70vh;
                right: 8px;
                bottom: 72px;
            }
        }
    </style>

    <iframe id="aiPanel" class="ai-panel" src="~/chatbox/index.html" allow="clipboard-read; clipboard-write"></iframe>
    <button id="aiToggle" class="ai-toggle">💬 Chat</button>
    <script>
        (function(){
            const panel=document.getElementById('aiPanel');
            const btn=document.getElementById('aiToggle');
            if(!panel||!btn){ console.warn('AI widget not mounted'); return; }
            let open=false;
            btn.addEventListener('click',()=>{
                open=!open; panel.style.display=open?'block':'none'; btn.textContent=open?'✖ Đóng':'💬 Chat';
            });
        })();
    </script>

    @await Html.PartialAsync("_FeedbackModal")
    <script src="~/js/feedback-modal.js" asp-append-version="true"></script>


</body>
</html>

@model YourApp.Models.Employee
@{
    ViewData["Title"] = "Tạo nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Mã</label>
            <input asp-for="Code" class="form-control" />
            <small class="form-text text-muted">Để trống auto tạo</small>
        </div>
        <div class="form-group col-md-5">
            <label>Họ và tên</label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Chức vụ</label>
            <input asp-for="Position" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Bộ phận</label>
            <input asp-for="Department" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Ngày vào</label>
            <input asp-for="HireDate" class="form-control" type="date" />
        </div>
        <div class="form-group col-md-3">
            <label>Lương cơ bản</label>
            <input asp-for="BaseSalary" class="form-control" type="number" min="0" />
        </div>
        <div class="form-group col-md-3">
            <label>Trạng thái</label>
            <select asp-for="IsActive" class="form-control">
                <option value="true">Hoạt động</option>
                <option value="false">Ngưng</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Lưu</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

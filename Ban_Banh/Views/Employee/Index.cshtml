@model YourApp.Models.EmployeeFilterViewModel
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
</div>

<form method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="Query" value="@Model.Query" class="form-control" placeholder="Tìm tên / mã / email" />
    </div>
    <div class="form-group mr-2">
        <input type="date" name="From" value="@(Model.From?.ToString("yyyy-MM-dd") ?? "")" class="form-control" />
    </div>
    <div class="form-group mr-2">
        <input type="date" name="To" value="@(Model.To?.ToString("yyyy-MM-dd") ?? "")" class="form-control" />
    </div>
    <div class="form-group mr-2">
        <select asp-for="IsActive" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ngưng</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary mr-2">Lọc</button>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Xóa</a>
    <a class="btn btn-success ml-3" href="@Url.Action("Create")">+ Thêm nhân viên</a>
</form>

<!-- Quick ranges -->
<div class="mb-3">
    <span>Khoảng nhanh: </span>
    <a class="btn btn-sm btn-light" href="@Url.Action("Index", new { QuickRange = "day" })">Hôm nay</a>
    <a class="btn btn-sm btn-light" href="@Url.Action("Index", new { QuickRange = "week" })">Tuần</a>
    <a class="btn btn-sm btn-light" href="@Url.Action("Index", new { QuickRange = "month" })">Tháng</a>
    <a class="btn btn-sm btn-light" href="@Url.Action("Index", new { QuickRange = "quarter" })">Quý</a>
    <a class="btn btn-sm btn-light" href="@Url.Action("Index", new { QuickRange = "year" })">Năm</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ & tên</th>
            <th>Chức vụ</th>
            <th>Bộ phận</th>
            <th>Ngày vào</th>
            <th>Lương</th>
            <th>Trạng thái</th>
            <th style="width:160px">Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model.Items)
    {
        <tr>
            <td>@e.Code</td>
            <td>@e.FullName<br /><small>@e.Email</small></td>
            <td>@e.Position</td>
            <td>@e.Department</td>
            <td>@e.HireDate.ToString("yyyy-MM-dd")</td>
            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}₫", e.BaseSalary)</td>
            <td>
                @if (e.IsActive)
                {
                    <span class="badge badge-success">Hoạt động</span>
                }
                else
                {
                    <span class="badge badge-secondary">Ngưng</span>
                }
            </td>
            <td>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = e.Id })">Xem</a>
                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = e.Id })">Sửa</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = e.Id })">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Simple pager -->
<div class="d-flex justify-content-between">
    <div>
        Hiển thị @Model.Items.Count của @Model.TotalItems
    </div>
    <div>
        @{
            var totalPages = (int)Math.Ceiling(Model.TotalItems / (double)Model.PageSize);
            var current = Math.Max(1, Model.Page);
        }
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm">
                <li class="page-item @(current<=1? "disabled":"")">
                    <a class="page-link" href="@Url.Action("Index", new { Page = current-1 })">«</a>
                </li>
                @for (int p = 1; p <= Math.Min(10, totalPages); p++)
                {
                    <li class="page-item @(p==current? "active":"")">
                        <a class="page-link" href="@Url.Action("Index", new { Page = p })">@p</a>
                    </li>
                }
                <li class="page-item @(current>=totalPages? "disabled":"")">
                    <a class="page-link" href="@Url.Action("Index", new { Page = current+1 })">»</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@model YourApp.Models.SalaryRecord
@{
    ViewData["Title"] = "Xóa bảng lương";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert alert-danger">
    Bạn có chắc muốn xóa bảng lương của <strong>@Model.EmployeeName</strong> (@Model.Period.ToString("MM/yyyy"))?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>

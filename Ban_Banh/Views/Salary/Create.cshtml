@model YourApp.Models.SalaryRecord
@{
    ViewData["Title"] = "Thêm bảng lương";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action= "Create" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Nhân viên</label>
            <input asp-for="EmployeeName" class="form-control" placeholder="Tên nhân viên" />
        </div>
        <div class="form-group col-md-3">
            <label>Bộ phận</label>
            <input asp-for="Department" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>Kỳ lương</label>
            <input asp-for="Period" type="month" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Lương cơ bản</label>
            <input asp-for="BaseSalary" class="form-control" type="number" min="0" />
        </div>
        <div class="form-group col-md-3">
            <label>Thưởng</label>
            <input asp-for="Bonus" class="form-control" type="number" min="0" />
        </div>
        <div class="form-group col-md-3">
            <label>Khấu trừ</label>
            <input asp-for="Deduction" class="form-control" type="number" min="0" />
        </div>
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <textarea asp-for="Note" class="form-control" rows="2"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Lưu</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>

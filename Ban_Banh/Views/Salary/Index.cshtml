@model YourApp.Models.SalaryFilterViewModel
@{
    ViewData["Title"] = "Bảng lương nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label>Năm:&nbsp;</label>
        <input type="number" name="Year" value="@Model.Year" class="form-control" min="2020" max="2100" />
    </div>
    <div class="form-group mr-2">
        <label>Tháng:&nbsp;</label>
        <input type="number" name="Month" value="@Model.Month" class="form-control" min="1" max="12" />
    </div>
    <div class="form-group mr-2">
        <input type="text" name="Department" value="@Model.Department" class="form-control" placeholder="Bộ phận" />
    </div>
    <button type="submit" class="btn btn-primary mr-2">Lọc</button>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Xóa</a>
    <a href="@Url.Action("Create")" class="btn btn-success ml-3">+ Thêm</a>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nhân viên</th>
            <th>Bộ phận</th>
            <th>Kỳ lương</th>
            <th>Lương cơ bản</th>
            <th>Thưởng</th>
            <th>Khấu trừ</th>
            <th>Tổng</th>
            <th style="width:150px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Items)
        {
            <tr>
                <td>@s.EmployeeName</td>
                <td>@s.Department</td>
                <td>@s.Period.ToString("MM/yyyy")</td>
                <td>@String.Format("{0:N0}₫", s.BaseSalary)</td>
                <td>@String.Format("{0:N0}₫", s.Bonus)</td>
                <td>@String.Format("{0:N0}₫", s.Deduction)</td>
                <td><strong>@String.Format("{0:N0}₫", s.Total)</strong></td>
                <td>
                    <a href="@Url.Action("Details", new { id = s.Id })" class="btn btn-sm btn-info">Xem</a>
                    <a href="@Url.Action("Edit", new { id = s.Id })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", new { id = s.Id })" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-2 text-right">
    <strong>Tổng chi:</strong> @String.Format("{0:N0}₫", Model.TotalPaid)
</div>
